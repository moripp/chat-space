.wrapper__side
  -# 左サイド、上、ユーザー名表示
  .wrapper__side__header
    .wrapper__side__header__box
      = current_user.name
      = link_to edit_user_path(current_user), class: "wrapper__side__header__box__icon" do
        = fa_icon "cog"
      = link_to new_group_path, class: "wrapper__side__header__box__icon" do
        = fa_icon "edit",class: "wrapper__side__header__box__icon__edit"

  -# 左サイド、下、所属グループ一覧
  .wrapper__side__contents
    = render "shared/group"